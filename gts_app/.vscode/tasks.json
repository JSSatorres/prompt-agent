{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Back Dev",
      "type": "shell",
      "command": "yarn",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/back",
        "env": {}
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Front Dev",
      "type": "shell",
      "command": "yarn",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/front",
        "env": {}
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Dev All",
      "dependsOn": ["Back Dev", "Front Dev"],
      "dependsOrder": "parallel",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}